	<div class="panel-section row">
      <div class="col-md-6 col-sm-8 col-xs-12">
         <h3>Dodaj novu literaturu</h3>
      
         <form method="POST" action="http://localhost:8080/moderator/literatura/dodaj">
            <select name="kategorija" class="form-control" class="select-kategorija"></select>
            
            <input required type="text" name="autor-literature" class="form-control" placeholder="Autor">
            <input required type="text" name="naziv-literature" class="form-control" placeholder="Naziv">
            <input required type="text" name="izdavac" class="form-control" placeholder="Izdavac">
            <input required type="text" name="godina-izdavanja" class="form-control" placeholder="Godina izdavanja">
            <input required type="number" name="broj-strana" class="form-control" placeholder="Broj strana">
            <input required type="text" name="komentar" class="form-control" placeholder="Komentar">
            <input required type="text" name="mogucnost-preuzimanja" class="form-control" value="0">
            <input required type="date" name="datum-unosa" class="form-control" placeholder="Datum unosa">

            <input type="submit" name="dodaj-novu-literaturu" class="btn btn-success" value="Dodaj novu literaturu"> 
         </form>
      </div>
      <div class="col-md-6 col-sm-4 hidden-xs"></div>
   </div>
