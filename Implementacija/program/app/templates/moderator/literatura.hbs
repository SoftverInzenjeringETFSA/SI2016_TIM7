<hr>



	<div class="panel-section">
		<h3>Pregled literature</h3>
		<h5>Pregled sve literature ili prema odabranoj kategoriji.</h5>

		<div class="row">
			<div class="form-group col-md-6">
				<label for="filter-kategorija">Izabrana kategorija:</label>
				<select id="filter-kategorija" name="naziv_literature" class="form-control select-kategorija">
					<option value="0">Sve</option>
				</select>
			</div>
			<div class="col-md-6 col-sm-4 hidden-xs"></div>
		</div>
		<table class="table table-striped">
		    <thead>
			    <tr>
				    <th>Naziv</th>
				    <th>Autor</th>
				    <th>Izdavac</th>
				    <th>Kategorija</th>
				    <th>Potkategorija</th>
				    <th>Opcije</th>
			    </tr>
		    </thead>
		    
		    <tbody id="literatura-lista">
		      {{#each model as |literatura|}}
		      <tr>
			      <td>{{literatura.naziv_literature}}</td>
			      <td>{{literatura.autor_literature}}</td>
			      <td>{{literatura.izdavac}}</td>

			      <td>{{literatura.kategorija.naziv_kategorije}}</td>
			      <td>{{literatura.kategorija.potkategorija}}</td>

			      <td>
					  <a data-id="{{literatura.id}}" class="btn btn-default download-literature" title="Mogucnost preuzimanja">
			            <span class="glyphicon glyphicon-download-alt"></span>
			          </a>
			         <a data-id="{{literatura.id}}" class="btn btn-default izmjena-literature" title="Izmjena">
			           <span class="glyphicon glyphicon-pencil"></span>
			          </a>
			          <a data-id="{{literatura.id}}" class="btn btn-default brisanje-literature" title="Brisanje">
			            <span class="glyphicon glyphicon-remove"></span>
			          </a>
			      </td>
		      </tr>
		      {{/each}}
		  </tbody>
		</table>
	</div>
</div>

<script type="text/javascript" src="/assets/js/js-literatura.js"></script>