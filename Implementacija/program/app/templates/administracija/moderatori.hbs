{{admin-nav}}

<div id="panel-holder" class="container">
   <h3>Moderatori</h3>
   <h5>Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod
      tempor incididunt ut labore et dolore magna aliqua.
   </h5>

   <div class="panel-section row">
    <div class="col-md-6 col-sm-8 col-xs-12">
      <h3>Dodaj novog moderatora</h3>
      <form method="POST" action="http://localhost:8080/administracija/moderatori/dodaj">
            <select name="korisnicko-ime" class="form-control" class="select-korisnicko-ime"></select>
            
            <input required type="text" name="sigurnosniId" class="form-control" placeholder="Sigurnosni id">
            <input required type="text" name="adresa" class="form-control" placeholder="Adresa">
            <input required type="text" name="grad" class="form-control" placeholder="Grad">
            <input required type="email" name="email" class="form-control" placeholder="Email">

            <input type="submit" name="dodaj-novog-moderatora" class="btn btn-success" value="Dodaj novog moderatora"> 
         </form>
    </div>
   </div>

   <div class="panel-section">
      <h3>Pregled svih moderatora</h3>
      <table class="table table-striped">
         <thead>
            <tr>
               <th>Ime</th>
               <th>Prezime</th>
               <th>Adresa</th>
               <th>Grad</th>
               <th>Email</th>
               <th>Opcije</th>
            </tr>
         </thead>
         <tbody>
            {{#each model as |moderator|}}
            <tr>
               <td>{{moderator.osoba.ime}}</td>
               <td>{{moderator.osoba.prezime}}</td>
               <td>{{moderator.adresa}}</td>
               <td>{{moderator.grad}}</td>
               <td>{{moderator.email}}</td>
               <td>
                  <a data-id="{{moderator.id}}" class="btn btn-default izmjena-moderatora" title="Izmjena">
                  <span class="glyphicon glyphicon-pencil"></span>
                  </a>
                  <a data-id="{{moderator.id}}" class="btn btn-default brisanje-moderatora" title="Brisanje">
                  <span class="glyphicon glyphicon-remove"></span>
                  </a>
               </td>
            </tr>
            {{/each}}
         </tbody>
      </table>
   </div>
</div>

<script type="text/javascript" src="/assets/js/js-admin-moderator.js"></script>
<script type="text/javascript" src="/assets/js/js-osoba.js"></script>